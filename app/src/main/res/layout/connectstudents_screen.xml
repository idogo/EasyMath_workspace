<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvAddLevelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="אנא הכנס את שם המשתמש של התלמיד אותו תרצה להוסיף" />

    <EditText
        android:id="@+id/tfaddStudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAddLevelTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:singleLine="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnAddStud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tfaddStudents"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="הוסף" />

</RelativeLayout>
