<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btbasicdivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:text="חילוק בסיסי" />

    <Button
        android:id="@+id/btdivideupto20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btbasicdivide"
        android:layout_below="@+id/btbasicdivide"
        android:layout_marginTop="54dp"
        android:text="חילוק עד 20" />

    <Button
        android:id="@+id/btdivide3elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btdivideupto20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="חילוק 3 גורמים" />

</RelativeLayout>
